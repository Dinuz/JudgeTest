<h2>Invite Request</h2>

<%= simple_form_for(@invite_request,  url: invite_request_path) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: false, :validate => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Invite Request" %>
  </div>
<% end %>